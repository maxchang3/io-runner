{
  "publisher": "maxchang3",
  "name": "judge-runner",
  "displayName": "judge-runner",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "author": "maxchang3 <maxcfoo@gmail.com>",
  "repository": { "url": "https://github.com/maxchang3/judge-runner" },
  "license": "MIT",
  "main": "./dist/extension.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.78.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "judge-runner.run",
        "title": "Compile And Run",
        "icon": "$(play)"
      },
      {
        "command": "judge-runner.stop",
        "title": "Stop",
        "icon": "$(primitive-square)"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "judge-runner",
          "title": "Judge Runner",
          "icon": "$(symbol-event)"
        }
      ]
    },
    "views": {
      "judge-runner": [
        {
          "id": "judge-runner.panel",
          "name": "Judge Runner",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "judge-runner.run",
          "when": "view == judge-runner.panel",
          "group": "navigation"
        },
        {
          "command": "judge-runner.stop",
          "when": "view == judge-runner.panel",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "pnpm build:prod",
    "build:dev": "tsup",
    "build:prod": "tsup --minify",
    "dev": "pnpm build:dev --watch",
    "vscode:prepublish": "pnpm build:prod",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish"
  },
  "devDependencies": {
    "@types/node": "^18.16.16",
    "@types/vscode": "^1.78.1",
    "@types/vscode-webview": "^1.57.2",
    "@vscode/vsce": "^2.19.0",
    "bumpp": "^9.1.0",
    "esno": "^0.16.3",
    "pnpm": "^8.6.0",
    "rimraf": "^5.0.1",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3",
    "vite": "^4.2.3"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2"
  }
}
