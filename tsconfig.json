{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": [ "es2020" ],
    "types": [ "@types/node" ],
    "moduleResolution": "node",
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ],
      "webview": [ "webview/*" ],
    },
    "noUncheckedIndexedAccess": true
  },
  "references": [
    { "path": "./webview" }
  ],
  "exclude": [
    "webview",
    "node_modules",
    "temp"
  ]
}
